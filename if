<?php if( get_field('informacoes_importantes') ){ ?>
	<div class="historiaEvento">
		<?php
		global $wp_query;
		$postid = $wp_query->post->ID;
		echo get_post_meta($postid, 'informacoes_importantes', true);
		wp_reset_query();
	?>
	</div>
<?php }
else
{ ?>
<div class="historiaEvento" style="display:none;">
<?php } ?>
